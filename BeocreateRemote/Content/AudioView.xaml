<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeocreateRemote.Content.AudioView"
             xmlns:content="clr-namespace:BeocreateRemote.Content"
             >
    <ContentView.Resources>
        <content:VolumeToStringConverter x:Key="volumeToStringConverter" />
    </ContentView.Resources>
    
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Slider Value="{Binding Volume}" ></Slider>
        <Label Text="{Binding Volume, Converter={StaticResource volumeToStringConverter}}"></Label>
    </VerticalStackLayout>
</ContentView>
