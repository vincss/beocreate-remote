<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeocreateRemote.MainPage"
             xmlns:pages="clr-namespace:BeocreateRemote.Pages"
             x:DataType="pages:MainViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="--- The Start ---" />

            <Button Text="Audio Control" Command="{Binding NavigateToAudioControlCommand}"></Button>
            
            <Label Text="{Binding Temperature}" />
            <Button 
                Text="Refresh"
                Command="{Binding RefreshCommand}"
            />
            <Button 
                Text="Mute"
                Command="{Binding MuteCommand}"
            />
            <Button 
                Text="Unmute"
                Command="{Binding UnmuteCommand}"
            />
            <Label Text="--- The End ---" />
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
